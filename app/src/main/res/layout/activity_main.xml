<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.inception.demo4.MainActivity">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/off_red"
        android:id="@+id/red_light"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/off_yellow"
        android:layout_marginTop="10dp"
        android:id="@+id/yellow_light"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/off_green"
        android:layout_marginTop="10dp"
        android:id="@+id/green_light"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/off_red"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"
        android:text="RUN"
        android:textColor="#fff"
        android:onClick="runLights"/>

</LinearLayout>
